<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Testare tipuri de dialog" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="alertDialogSimpleClick"
        android:text="AlertDialog simplu" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="alertDialogComplexClick"
        android:text="AlertDialog lista" />
            <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="progressDialogClick"
        android:text="ProgressDialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>


        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       	 	android:onClick="datePickerDialogClick"
        	android:text="DatePickerDialog"  />

    </LinearLayout>    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editOra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="timePickerDialogClick"
            android:text="TimePickerDialog" />

    </LinearLayout>
    

</LinearLayout>